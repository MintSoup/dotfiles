#!/bin/fish

set layout (xkb-switch)
xkb-switch -s us

i3lock -C \
-i "/home/areg/Wallpapers/lock.png" \
--layout-pos='w/2:h-20' \
--clock \
--keylayout 0 \
--layout-font "FiraCode Nerd Font" \
--insidever-color=141419 \
--ringver-color=141419 \
--ring-color=e86315 \
--keyhl-color=c70096 \
--wrong-color=d6d6d6 \
--verif-color=d6d6d6 \
--layout-color=00000000 \
--layout-align 1 \
--date-color 00000000 \
--nofork

sleep 0.05
xkb-switch -s $layout
