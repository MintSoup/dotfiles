#!/bin/fish

set layout (xkb-switch)
xkb-switch -s us

i3lock -C \
-i "/home/areg/Wallpapers/lock.png" \
--layoutpos='w/2:h-20' \
--clock \
--keylayout 0 \
--layout-font "FiraCode Nerd Font" \
--insidevercolor=141419 \
--ringvercolor=141419 \
--ringcolor=e86315 \
--keyhlcolor=c70096 \
--wrongcolor=d6d6d6 \
--verifcolor=d6d6d6 \
--layoutcolor=00000000 \
--layout-align 1 \
--datecolor 00000000 \
--nofork

sleep 0.05
xkb-switch -s $layout
